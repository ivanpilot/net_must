{
    "name": "template_api_server",
    "version": "1.0.0",
    "engines": {
        "node": "10.x.x"
    },
    "description": "Starting project with ts and jest - template server",
    "main": "src/index.ts",
    "scripts": {
        "build": "npm run clean && tsc -p .",
        "clean": "rimraf ./build",
        "dev": "ts-node-dev --respawn --transpileOnly ./src/index.ts",
        "start": "node ./build/index.js",
        "test": "jest --coverage",
        "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand"
    },
    "author": "Ivan Pilot",
    "license": "ISC",
    "dependencies": {
        "body-parser": "^1.18.3",
        "express": "^4.16.4",
        "helmet": "^3.18.0",
        "morgan": "^1.9.1",
        "typescript": "^3.5.1",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/express": "^4.16.1",
        "@types/helmet": "0.0.43",
        "@types/jest": "^24.0.13",
        "@types/morgan": "^1.7.35",
        "@types/winston": "^2.4.4",
        "jest": "^24.5.0",
        "prettier": "^1.16.4",
        "ts-node-dev": "^1.0.0-pre.32",
        "tslint": "^5.14.0",
        "tslint-config-prettier": "^1.18.0"
    }
}
